    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="/Areas/Admin/Content/Ace_Admin/js/bootstrap.min.js"></script>
    <script src="/Areas/Admin/Scripts/bootstrap3-validation.js"></script>
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <link href="/Areas/Admin/Content/Css/bootstrap-ie78.css" rel="stylesheet" type="text/css" />
