    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta charset="utf-8" />
    <title>Login Page - Ace Admin</title>
    <meta name="description" content="User login page" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
    <!-- bootstrap & fontawesome -->
    <link rel="stylesheet" href="/Areas/Admin/Content/Ace_Admin/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/Areas/Admin/Content/Ace_Admin/css/font-awesome.min.css" />
    <!-- text fonts -->
    <link rel="stylesheet" href="/Areas/Admin/Content/Ace_Admin/css/ace-fonts.css" />
    <!-- ace styles -->
    <link rel="stylesheet" href="/Areas/Admin/Content/Ace_Admin/css/ace.min.css" />
    <!--[if lte IE 9]>
        <link rel="stylesheet" href="/Areas/Admin/Content/Ace_Admin/css/ace-part2.min.css" />
    <![endif]-->
    <link rel="stylesheet" href="/Areas/Admin/Content/Ace_Admin/css/ace-rtl.min.css" />
    <!--[if lte IE 9]>
      <link rel="stylesheet" href="/Areas/Admin/Content/Ace_Admin/css/ace-ie.min.css" />
    <![endif]-->
    <link rel="stylesheet" href="/Areas/Admin/Content/Ace_Admin/css/ace.onpage-help.css" />
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="/Areas/Admin/Content/Ace_Admin/js/html5shiv.js"></script>
    <script src="/Areas/Admin/Content/Ace_Admin/js/respond.min.js"></script>
    <![endif]-->
