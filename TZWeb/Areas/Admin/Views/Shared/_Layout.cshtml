    <script type="text/x-jquery-tmpl" id="menuTemplate">
        {{each(i,value) menus}}
        {{if !value.Children || value.Children.length==0}}
        <li class="" data-type='menu' data-flg="parent">
            <a href="/${value.LinkAddress}" data-flg="pjax">
                <i class="menu-icon ${value.Icon}"></i>
                <span class="menu-text"> ${value.Name} </span>
            </a>
            <b class="arrow"></b>
        </li>
        {{else}}
        <li class="hsub" data-type='menu' data-flg="parent">
            <a href="javascript:void(0)" data-flg="pjax" class="dropdown-toggle">
                <i class="menu-icon ${value.Icon}"></i>
                <span class="menu-text"> ${value.Name} </span>
                <b class="arrow fa fa-angle-down"></b>
            </a>
            <b class="arrow"></b>
            <ul class="submenu">
                {{each(ci,cvalue) value.Children}}
                <li class="" data-type='menu' data-flg="children">
                    <a href="/${cvalue.LinkAddress}" data-flg="pjax">
                        <i class="menu-icon fa fa-caret-right"></i>
                        ${cvalue.Name}
                    </a>
                    <b class="arrow"></b>
                </li>
                {{/each}}
            </ul>
        </li>
        {{/if}}
        {{/each}}
    </script>
    <script type="text/javascript">
        $(function () {
            //加载菜单
            xcore.ajax("/Home/GetMenus", null, function (result) {
                if (result != null && result.length > 0) {
                    var data = {};
                    data.menus = result;
                    $("#menuTemplate").tmpl(data).appendTo('#menuList');

                    //绑定菜单事件
                    //绑定父级菜单
                    $("#menuList li").bind('click', function (event) {
                        $("#menuList li").removeClass("active").removeClass("open");
                        if ($(this).attr("data-flg") == "parent") {
                            $("#menuList li ul").hide();
                            if ($(this).hasClass("hsub"))
                                $(this).addClass("open");
                            else
                                $(this).addClass("active");
                        } else {
                            $(this).addClass("active");
                            $(this).parent().parent().addClass("active open");//父级添加样式
                            return false;
                        }
                    });
                }
            }, true);

            //$.pjax("a[type=menu]", "#container", { show: 'fade' });
            $(document).pjax('a[data-flg=pjax]', '#container');
            $(document).on('pjax:start', function () {
                //在pjax发送请求时，显示loading动画层
                $('#loading').show();
            });
            $(document).on('pjax:complete', function () {
                //在pjax处理完成后，隐藏loading动画层
                //由于速度太快会导到loading层闪烁，影响体验，所以在此加上500毫秒延迟
                setTimeout(function () { $('#loading').hide(); }, 500);
            });
        });
